<%- contentFor('body') %>
<div class="jumbotron text-center">
    <h1>E os jogos serão: </h1>
    <h3>Rodoada <%= rodada %></h3>
    <form name="partidas" action="/rodada" method="POST"> 
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>#</th>
                    <th scope="col">Jogos</th>              
                </tr>
            </thead>
            <tbody>
                <% for(var i = 0; i < jogos.length; i++){
                    var jogo = jogos[i]; 
                    %>   
                <tr>
                    <th scope="row"><%= i %></th>                
                    <td> <img src="pomo.png" width="30px"> <%=jogo.equipe1%> x <%=jogo.equipe2%></td>               
                </tr>
                <%}%> 
            </tbody>            
        </table>
    <hr>   
        <button type="submit" class="btn btn-dark">Próxima rodada</button>
    </form>
</div>